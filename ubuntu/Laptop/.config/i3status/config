general {
        output_format = "i3bar"
        colors = true
        interval = 5
}

order += "load"
order += "cpu_temperature 0"
order += "disk /"
#order += "ethernet enp1s0"
#order += "wireless wlp2s0"
order += "wireless wlan0"
order += "ethernet eth0"
order += "volume master"
order += "battery 0"
order += "battery 1"
order += "tztime local"

battery 0 {
        format = "%status %percentage %remaining %emptytime"
	      format_down = "No battery"
        status_chr = "âš¡ CHR"
        status_bat = "ðŸ”‹ BAT"
        status_unk = "? UNK"
        status_full = "â˜» FULL"
        low_threshold = 10
}
